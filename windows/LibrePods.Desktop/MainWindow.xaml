<Window x:Class="LibrePods.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LibrePods" 
        Height="600" 
        Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="LibrePods" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <TextBlock x:Name="ConnectionStatus" 
                           Text="Disconnected" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <Button Content="Connect" 
                        x:Name="ConnectButton"
                        Style="{StaticResource ModernButton}"
                        Click="ConnectButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <TabControl Grid.Row="1" 
                    Background="Transparent"
                    BorderThickness="0">
            
            <!-- Status Tab -->
            <TabItem Header="Status">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Battery Status Card -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Battery Status" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="Left" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="LeftBatteryText" 
                                                   Text="--%" 
                                                   FontSize="32" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock x:Name="LeftStatusText" 
                                                   Text="" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Right -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Right" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="RightBatteryText" 
                                                   Text="--%" 
                                                   FontSize="32" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock x:Name="RightStatusText" 
                                                   Text="" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Case -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Case" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="CaseBatteryText" 
                                                   Text="--%" 
                                                   FontSize="32" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock x:Name="CaseStatusText" 
                                                   Text="" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Ear Detection Card -->
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Ear Detection" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="Left" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="LeftEarText" 
                                                   Text="Out" 
                                                   FontSize="20" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Right" 
                                                   FontSize="14" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="RightEarText" 
                                                   Text="Out" 
                                                   FontSize="20" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Noise Control Tab -->
            <TabItem Header="Noise Control">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Noise Control Mode" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <RadioButton x:Name="NoiseControlOff" 
                                             Content="Off" 
                                             GroupName="NoiseControl"
                                             FontSize="14"
                                             Margin="0,5"
                                             Checked="NoiseControlMode_Changed"/>
                                <RadioButton x:Name="NoiseControlTransparency" 
                                             Content="Transparency" 
                                             GroupName="NoiseControl"
                                             FontSize="14"
                                             Margin="0,5"
                                             Checked="NoiseControlMode_Changed"/>
                                <RadioButton x:Name="NoiseControlAdaptiveTransparency" 
                                             Content="Adaptive Transparency" 
                                             GroupName="NoiseControl"
                                             FontSize="14"
                                             Margin="0,5"
                                             Checked="NoiseControlMode_Changed"/>
                                <RadioButton x:Name="NoiseControlANC" 
                                             Content="Noise Cancellation" 
                                             GroupName="NoiseControl"
                                             FontSize="14"
                                             Margin="0,5"
                                             Checked="NoiseControlMode_Changed"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Conversational Awareness" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>
                                
                                <CheckBox x:Name="ConversationalAwarenessCheckBox"
                                          Content="Enable Conversational Awareness"
                                          FontSize="14"
                                          Checked="ConversationalAwareness_Changed"
                                          Unchecked="ConversationalAwareness_Changed"/>
                                
                                <TextBlock x:Name="ConversationalAwarenessStatus"
                                           Text="Status: Inactive"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="Device Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Device Name" 
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="DeviceNameTextBox"
                                         FontSize="14"
                                         Padding="8"
                                         Margin="0,0,0,10"/>
                                
                                <Button Content="Rename Device" 
                                        Style="{StaticResource ModernButton}"
                                        Click="RenameDevice_Click"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource Card}">
                            <StackPanel>
                                <TextBlock Text="About" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="LibrePods for Windows" 
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Version 1.0.0" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Copyright (C) 2025 LibrePods contributors" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Licensed under GPL-3.0-or-later" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
